<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/rowComicImage"
        android:layout_width="120dp"
        android:layout_height="182dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/rowComicListTitle"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="top|bottom|left|right|center_vertical|center_horizontal|fill|clip_vertical"
        android:text="My Little Pony : Friendship is Magic"
        android:textAlignment="center"
        android:textDirection="ltr"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowComicImage"
        app:layout_constraintTop_toTopOf="@+id/rowComicImage" />

    <TextView
        android:id="@+id/rowComicTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|fill_vertical|center_horizontal|clip_horizontal"
        android:text="Comic #1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rowComicImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowComicImage"
        app:layout_constraintTop_toBottomOf="@+id/rowComicListTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>