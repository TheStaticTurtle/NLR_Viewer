<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bvp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".VideoPlayerV2">

    <TextureView
        android:id="@+id/scaleThisFuckingVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.halilibo.bettervideoplayer.BetterVideoPlayer
        android:id="@+id/bvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        bvp:bvp_autoPlay="true"
        bvp:bvp_captionColor="@color/subsColor_color" />

</FrameLayout>
